<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:layout_weight="1"
    android:background="@drawable/borde"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lContenedor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tJuego"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="CATAN"
                android:textAlignment="center"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/iJuego"
                android:layout_width="wrap_content"
                android:layout_height="82dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/catan" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tJugador"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jugador"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tJ1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Jorge" />

            <TextView
                android:id="@+id/tJ2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Luis" />

            <TextView
                android:id="@+id/tJ3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Joseto" />

            <TextView
                android:id="@+id/tJ4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Carlos" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tPuntos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Puntos"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tPJ1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="10" />

            <TextView
                android:id="@+id/tPJ2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="8" />

            <TextView
                android:id="@+id/tPJ3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="9" />

            <TextView
                android:id="@+id/tPJ4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="5" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>