<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".act2">

    <TextView
        android:id="@+id/tSaludo2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Saludo"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/bVolver1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bEnviar3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enviar a 3"
        app:layout_constraintBottom_toTopOf="@+id/bReverse"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/eTexto2"
        app:layout_constraintTop_toBottomOf="@+id/tSaludo2"
        app:layout_constraintVertical_bias="0.514" />

    <EditText
        android:id="@+id/eTexto2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Escriba texto para enviar a 3"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/bVolver1"
        app:layout_constraintEnd_toStartOf="@+id/bEnviar3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tSaludo2" />

    <Button
        android:id="@+id/bVolver1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Volver"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/bReverse"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.578" />

    <Button
        android:id="@+id/bReverse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reversa"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/bVolver1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.578" />

    <Button
        android:id="@+id/bCancela"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nueva"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eTexto2" />

</androidx.constraintlayout.widget.ConstraintLayout>